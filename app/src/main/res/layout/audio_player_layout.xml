<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#00BCD4">

    <ImageButton
        android:background="@drawable/circulo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imgbplay"
        android:layout_alignParentStart="true"
        android:src="@drawable/btnplay"
         />

    <ImageButton
        android:background="@drawable/circulo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imgbpause"
        android:layout_alignBottom="@+id/imgbplay"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btnpause" />

    <ImageButton
        android:background="@drawable/circulo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imgbstop"
        android:layout_alignParentEnd="true"
        android:src="@drawable/btmstop"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbload"
        android:layout_centerHorizontal="true" />

</RelativeLayout>